    {% endfor %}
    </ul>
    <button type="button"
    class="add-another-collection-widget btn btn-outline-success "
    data-list-selector="#equipement-fields-list">Ajouter un ustensile</button>
    <br>
    <br>


    {{ form_row(form.content) }}
